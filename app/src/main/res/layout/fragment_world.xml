<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.india.view.IndiaFragment"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:layout_margin="32dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="WHO Whatsapp Contact "
            android:textSize="16dp"
            android:id="@+id/tv_who_whatsapp_lable"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:layout_margin="32dp"
            android:clickable="true"
            android:autoLink="web"
            app:layout_constraintTop_toBottomOf="@+id/tv_who_whatsapp_lable"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="@string/who_whatspp_url"
            android:id="@+id/tv_who_whatapp_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="32dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_who_whatapp_url"
            android:text="@string/how_to_protect_yourself_from_corona_virus"
            android:id="@+id/tv_who_youtube1_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/iv_who_youtube1"
            android:layout_margin="32dp"
            app:layout_constraintTop_toBottomOf="@id/tv_who_whatapp_url"
            android:src="@drawable/how_to_protect_yourself_from_corona_virus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_margin="32dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_who_youtube1"
            android:text="corona virus transmission"
            android:id="@+id/tv_who_youtube2_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/iv_who_youtube2"
            android:layout_margin="32dp"
            app:layout_constraintTop_toBottomOf="@id/tv_who_youtube2_label"
            android:src="@drawable/corona_virus_transmission"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.core.widget.NestedScrollView>

